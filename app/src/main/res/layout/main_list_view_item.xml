<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffff8355">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainEventTitle"
        android:textSize="30sp"
        android:id="@+id/MainEventTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainEventDate "
        android:textSize="20sp"
        android:id="@+id/MainEventDate"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MainEventDesciption MainEventDesciption MainEventDesciption MainEventDesciption MainEventDesciption MainEventDesciption"
        android:textSize="20sp"
        android:id="@+id/MainEventDesciption"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>